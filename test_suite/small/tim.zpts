name:index
<indexterm remap="index" tal:attributes="id self/id">
  <primary tal:condition="self/prisort" tal:attributes="sortas self/prisort"
           tal:content="self/primary"></primary>
  <primary tal:condition="not:self/prisort" tal:content="self/primary"></primary>
  <span tal:condition="self/secondary" tal:omit-tag="">
      <secondary tal:condition="self/secsort" tal:attributes="sortas self/secsort"
                 tal:content="self/secondary"></secondary>
      <secondary tal:condition="not:self/secsort" tal:content="self/secondary"></secondary>
  </span>
</indexterm>
